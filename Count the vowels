#include <stdio.h>

#include <string.h>

int main() {

    char s[100];

    int count = 0;

    scanf("%s", s);

    for (int i = 0; i < strlen(s); i++) {

        char ch = s[i];

        if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u' ||

            ch == 'A' || ch == 'E' || ch == 'I' || ch == 'O' || ch == 'U') {

            count++;

        }

    }

    printf("%d\n", count);

    return 0;

}
